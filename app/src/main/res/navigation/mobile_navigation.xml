    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.to.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_cars"
        android:name="com.example.myapplication.ui.cars.CarsFragment"
        android:label="@string/title_cars"
        tools:layout="@layout/cars_fragment" />

    <fragment
        android:id="@+id/navigation_works"
        android:name="com.example.myapplication.ui.WorksFragment"
        android:label="@string/title_works"
        tools:layout="@layout/fragment_works" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.myapplication.ui.ProfileFragment"
        android:label="@string/title_profile"
