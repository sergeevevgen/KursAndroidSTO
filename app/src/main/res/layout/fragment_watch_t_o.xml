<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/white"
    tools:context=".ui.to.WatchTOFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FEFEFE"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE5E5"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/watch_to_idTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Номер: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/watch_to_carnameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Автомобиль: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/watch_to_statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center|start"
                android:minHeight="48dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/watch_to_datecreateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Дата создания: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/watch_to_datebeginTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Дата начала: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/watch_to_dateendTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Дата окончания: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/watch_to_sumTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:text="Сумма: "
                android:textColor="#000000"
                android:gravity="center|start" />

            <Button
                android:id="@+id/watch_to_button_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FE8383"
                android:text="Отправить в работу" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FEFEFE"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Услуги"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/watch_to_recyclerview_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FEFEFE"
                android:padding="@dimen/big_padding"
                tools:listitem="@layout/work_item_recyclerview">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>