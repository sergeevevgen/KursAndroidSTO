<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/work_imageIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_miscellaneous_services_24" />

        <TextView
            android:id="@+id/work_item_toIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/work_imageIV"
            android:text="Номер ТО:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/work_item_storekeeperTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:text="Кладовщик: "
            android:textColor="#222020"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/work_item_nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_storekeeperTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:background="@color/white"
            android:drawablePadding="2dp"
            android:text="Название: "
            android:textColor="#4A4D4E" />

        <TextView
            android:id="@+id/work_item_priceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_nameTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:background="@color/white"
            android:drawablePadding="2dp"
            android:text="Стоимость: "
            android:textColor="#4A4D4E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/work_item_netpriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_priceTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:drawablePadding="2dp"
            android:text="Стоимость с уч. запчастей: "
            android:textColor="#4A4D4E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/work_item_statusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_netpriceTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:drawablePadding="2dp"
            android:textColor="#4A4D4E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/work_item_datebeginTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_statusTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:drawablePadding="2dp"
            android:text="Дата начала: "
            android:textColor="#4A4D4E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/work_item_countTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_item_datebeginTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/work_imageIV"
            android:drawablePadding="2dp"
            android:text="Кол-во: "
            android:textColor="#4A4D4E"
            android:textSize="11sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>