<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/car_imageIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_car" />

        <TextView
            android:id="@+id/car_brandTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/car_imageIV"
            android:text="Brand"
            android:textColor="#222020"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/car_modelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_brandTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/car_imageIV"
            android:background="@color/white"
            android:drawablePadding="2dp"
            android:text="Model"
            android:textColor="#4A4D4E" />

        <TextView
            android:id="@+id/car_vinTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_modelTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/car_imageIV"
            android:background="@color/white"
            android:drawablePadding="2dp"
            android:text="VIN"
            android:textColor="#4A4D4E"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/car_owner_phone_numberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_vinTV"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/car_imageIV"
            android:drawablePadding="2dp"
            android:text="Phone"
            android:textColor="#4A4D4E"
            android:textSize="11sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>